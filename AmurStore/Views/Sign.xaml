<Window x:Class="AmurStore.Views.Sign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmurStore.Views"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Sign"
        Background="{DynamicResource MaterialDesignPaper}" >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Themes/Background.png" Stretch="UniformToFill">
                <ImageBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Grid.Background>

        <!-- Верхняя панель с приветствием -->
        <StackPanel VerticalAlignment="Top" Margin="20">
            <TextBlock Text="Добро пожаловать в AmurStore!"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       FontFamily="Montserrat"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,30"/>
        </StackPanel>

        <!-- Центр: Frame для страниц SignIn/SignUp/ForgotPassword -->
        <Frame x:Name="SignFrame"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Width="600"
               Height="500"
               NavigationUIVisibility="Hidden"
               Background="#292929"/>
    </Grid>
</Window>
